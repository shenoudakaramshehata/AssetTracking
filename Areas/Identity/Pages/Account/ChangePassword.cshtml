@page
@model AssetProject.Areas.Identity.Pages.Account.ChangePasswordModel
@{
     Layout = "~/Pages/Shared/Admin/_AdminLayoutSlimEmpty.cshtml";
}
<div class="d-md-flex flex-row-reverse">
    <div class="signin-right">

        <div class="signin-box">
            <form method="post">
                <h4 class="signin-title-secondary">@sharedResource["Change your password"].</h4>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label @*asp-for="@Model.changePasswordVM.CurrentPassword"*@>@sharedResource["Current Password"]</label>
                    <input asp-for="@Model.changePasswordVM.CurrentPassword" class="form-control" placeholder="@sharedResource["Enter Your Current Password"]" />
                    <span asp-validation-for="@Model.changePasswordVM.CurrentPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label @*asp-for="@Model.changePasswordVM.NewPassword"*@>@sharedResource["New Password"]</label>
                    <input asp-for="@Model.changePasswordVM.NewPassword" class="form-control" placeholder="@sharedResource["Enter New Password"]" />
                    <span asp-validation-for="@Model.changePasswordVM.NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label @*asp-for="@Model.changePasswordVM.ConfirmPassword"*@> @sharedResource["Confirm Password"]</label>
                    <input asp-for="@Model.changePasswordVM.ConfirmPassword" class="form-control" placeholder="@sharedResource["Enter Password Again"]" />
                    <span asp-validation-for="@Model.changePasswordVM.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block btn-signin">@sharedResource["Change"]</button>
            </form>
        </div>
    </div>

    <div class="signin-left">
        <div class="signin-box">
            <h2 class="slim-logo"><a href="index.html">slim<span>.</span></a></h2>

            <p>@sharedResource["slim paragraph"].</p>

            <p class="tx-12">&copy; @sharedResource["Copyright 2022. All Rights Reserved"].</p>
        </div>
    </div><!-- signin-left -->
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
