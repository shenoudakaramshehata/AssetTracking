@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
     Layout = "~/Pages/Shared/Admin/_AdminLayoutSlimEmpty.cshtml";
}


<br />
<br />
<div class="d-md-flex flex-row-reverse">
    <div class="signin-right">
             <div class="signin-box signup">
                 <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                     <h3 class="signin-title-primary">@sharedResource["Get Started"] !</h3>
                     <h5 class="signin-title-secondary lh-4">@sharedResource["It's free to signup and only takes a minute"].</h5>
                     <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                     <div class="form-group">

                         <input asp-for="Input.FirstName" class="form-control" placeholder="@sharedResource["First Name"]" />
                         <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                     </div>
                     <div class="form-group">

                         <input asp-for="Input.LastName" class="form-control" placeholder="@sharedResource["Last Name"]" />
                         <span asp-validation-for="Input.LastName" class="text-danger"></span>
                     </div>

                     <div class="form-group">

                         <input asp-for="Input.Email" class="form-control" placeholder="@sharedResource["Email"]" />
                         <span asp-validation-for="Input.Email" class="text-danger"></span>
                     </div>


                     <div class="form-group">

                         <input asp-for="Input.Phone" class="form-control" placeholder="@sharedResource["PhoneNumber"]" />
                         <span asp-validation-for="Input.Phone" class="text-danger"></span>
                     </div>


                     <div class="form-group">

                         <input asp-for="Input.Password" class="form-control" placeholder="@sharedResource["Password"]" />
                         <span asp-validation-for="Input.Password" class="text-danger"></span>
                     </div>

                     
                         
                     
                     <div class="form-group">

                         <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="@sharedResource["Confirm Password"]" />
                         <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                     </div>

                      <div class="form-group">
                              <div class="custom-file">
                                  <input type="file" name="file" accept=".png, .jpg, .jpeg" class="custom-file-input" id="text" required>
                                  <label class="custom-file-label" for="File">@sharedResource["Choose New Photo"]</label>
                              </div>
                          </div>

                     <div class="form-group">

                         <input asp-for="Input.CompanyName" class="form-control" placeholder="@sharedResource["Company Name"]" />
                         <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
                     </div>

                     <button class="btn btn-primary btn-block btn-signin">@sharedResource["Sign Up"]</button>


                 </form>
          <div class="signup-separator"><span>@sharedResource["or signup using"]</span></div>

          @*<button class="btn btn-facebook btn-block">@sharedResource["Sign Up Using Facebook"]</button>
          <button class="btn btn-twitter btn-block">@sharedResource["Sign Up Using Twitter"]</button>*@

          <p class="mg-t-40 mg-b-0">@sharedResource["Already have an account"]? <a asp-area="Identity" asp-page="Login">@sharedResource["Sign In"]</a></p>
    </div>
    </div>
    <div class="signin-left">
        <div class="signin-box">
            <h2 class="slim-logo"><a href="index.html">slim<span>.</span></a></h2>

            <p>@sharedResource["slim paragraph"].</p>

            <p class="tx-12">&copy; @sharedResource["Copyright 2022. All Rights Reserved"].</p>
        </div>
    </div>
  
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">

                // Add the following code if you want the name of the file appear on select
                $("#text").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                    $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            });
    </script>
}
