@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "~/Pages/Shared/Admin/_AdminLayoutSlimEmpty.cshtml";
}
<div class="d-md-flex flex-row-reverse">
    <div class="signin-right">

        <div class="signin-box">
            @*<p class="signin-title-secondary">Forget Password</p>*@
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label @*asp-for="Input.Email"*@>@sharedResource["Email"]</label>
                    <input asp-for="Input.Email" class="form-control" placeholder="@sharedResource["Enter your email"]" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-block btn-signin">@sharedResource["Submit"]</button>
            </form>
        </div>
    </div>
    <div class="signin-left">
        <div class="signin-box">
            <h2 class="slim-logo"><a href="index.html">slim<span>.</span></a></h2>

            <p>@sharedResource["slim paragraph"].</p>

            <p class="tx-12">&copy; @sharedResource["Copyright 2022. All Rights Reserved"].</p>
        </div>
    </div><!-- signin-left -->
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
