@page
@model AssetProject.Areas.Admin.Pages.ItemManagement.DetailsItemModel
@{
}



<div class="slim-mainpanel">
    <div class="container">
        <div class="slim-pageheader">
            <ol class="breadcrumb slim-breadcrumb">
                <li class="breadcrumb-item"><a href="#">@sharedResource["Home"]</a></li>
                <li class="breadcrumb-item"><a href="#">@sharedResource["Item"]</a></li>
                <li class="breadcrumb-item active" aria-current="page">@sharedResource["Item Details"]</li>
            </ol>
            <h6 class="slim-pagetitle">@sharedResource["Item Information"]</h6>
        </div><!-- slim-pageheader -->

        <div class="section-wrapper">
            @* <label class="section-title">Please fill your company information</label>*@
            @*<p class="mg-b-20 mg-sm-b-40">Please fill your company information</p>*@

            <div class="form-layout">
                <div class="row mg-b-25">
                    <div class="col-lg-6">
                        <label class="form-control-label">@sharedResource["Item Title"]: <span class="tx-danger">*</span></label>
                        <div style="font-size:xx-large">@Model.Item.ItemTitle</div>
                    </div><!-- col-4 -->

                    <div class="col-lg-6">
                        <label class="form-control-label">@sharedResource["Description"]: <span class="tx-danger">*</span></label>
                        <div style="font-size:xx-large">@Model.Item.Description</div>
                    </div><!-- col-4 -->

                    <div class="col-lg-6">
                        <label class="form-control-label">@sharedResource["Brand"]: <span class="tx-danger">*</span></label>
                        <div style="font-size:xx-large">@Model.BrandName</div>
                    </div><!-- col-4 -->
                    <div class="col-lg-6">
                        <label class="form-control-label">@sharedResource["Category"]: <span class="tx-danger">*</span></label>
                        <div style="font-size:xx-large">@Model.CategoryName</div>
                    </div><!-- col-4 -->


                </div><!-- row -->
               

                <div class="form-layout-footer">
                    <a asp-area="Admin" asp-page="/ItemManagement/ItemList">
                        <input type='button' class="btn btn-secondary bd-0" value='@sharedResource["Back to List"]' />
                    </a>
                </div><!-- form-layout-footer -->

            </div><!-- form-layout -->
        </div><!-- section-wrapper -->

    </div><!-- container -->
</div>


@section Scripts {
    <script>


    </script>
}