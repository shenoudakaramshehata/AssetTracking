@page
@model AssetProject.Areas.Admin.Pages.TechnicianManagement.DeleteTechnicianModel
@{
}
<div class="slim-mainpanel">
    <div class="container">
        <div class="slim-pageheader">
            <ol class="breadcrumb slim-breadcrumb">
                <li class="breadcrumb-item"><a href="#">@sharedResource["Home"]</a></li>
                <li class="breadcrumb-item"><a href="#">@sharedResource["SETUP"]</a></li>
                <li class="breadcrumb-item active" aria-current="page">@sharedResource["Delete Technician"]</li>
            </ol>
            <h6 class="slim-pagetitle"> @sharedResource["Technician Information"]</h6>
        </div>
        <div class="section-wrapper">
            @*<label class="section-title">Please fill your company information</label>
                <p class="mg-b-20 mg-sm-b-40">Please fill your company information</p>*@

            <div class="form-layout">
                <div class="row mg-b-25">
                    <div class="col-lg-4">
                        <label class="form-control-label">@sharedResource["Technician Name"]: <span class="tx-danger">*</span></label>
                        <div style="font-size:large">@Model.technician.FullName</div>
                    </div>

                    <div class="col-lg-4">
                        <label class="form-control-label">@sharedResource["Mobile"]: <span class="tx-danger">*</span></label>
                        <div style="font-size:large">@Model.technician.Mobile</div>
                    </div>

                    <div class="col-lg-4">
                        <label class="form-control-label">@sharedResource["Address"]: <span class="tx-danger">*</span></label>
                        <div style="font-size:large">@Model.technician.Address</div>
                    </div>

                </div>
                <div class="row mg-b-25">

                    <div class="col-lg-4">
                        <label class="form-control-label">@sharedResource["Remarks"] : <span class="tx-danger">*</span></label>
                        <div style="font-size:large">@Model.technician.Remarks</div>
                    </div>
              

                </div>
                <div class="form-layout-footer">
                    <form method="post" asp-route-id="@Model.technician.TechnicianId">
                        <input type="submit" value='@sharedResource["Delete"]' class="btn btn-danger bd-0">
                        <a asp-area="Admin" asp-page="/TechnicianManagement/TechnicianList">
                            <input type='button' class="btn btn-secondary bd-0" value='@sharedResource["Cancel"]' />
                        </a>
                    </form>


                </div>
            </div>
        </div>
    </div>
</div>
